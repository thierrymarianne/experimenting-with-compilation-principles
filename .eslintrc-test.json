{
  "extends": [
    "airbnb-base", 
    "plugin:import/errors", 
    "plugin:import/warnings",
    "plugin:vue/recommended"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [ "src/**/*.js" ],
      "rules": {
        "func-names": 0,
        "object-shorthand": 0,
        "no-console": 0,
        "no-underscore-dangle": 0,
        "no-constant-condition": 0,
        "prefer-destructuring": 0,
        "no-param-reassign": 0,
        "indent": [
          ["error", 2]
        ],
        "semi": 2        
      }
    }, {
      "files": [ "test/**/*.spec.js" ],
      "rules": {
        "no-unused-expressions": 0,
        "func-names": 0,
        "object-shorthand": 0,
        "no-debugger": 0,
        "no-console": 0,
        "no-underscore-dangle": 0,
        "no-constant-condition": 0,
        "prefer-destructuring": 0,
        "no-param-reassign": 0,
        "indent": [
          ["error", 2]
        ],
        "semi": 2        
      }
    }
  ]
}